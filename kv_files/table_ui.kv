#:kivy 2.0

<Block>:
    size_hint: None, None
    size: dp(40), dp(40) 
    radius: [dp(10), dp(10), dp(10), dp(10)] 
    # elevation: dp(10)
    md_bg_color: app.theme_cls.opposite_bg_dark
    
    MDLabel:
        text: root.text
        halign: 'center'
        font_size: sp(20)
        bold: True
        theme_text_color: 'Custom'
        text_color: app.theme_cls.bg_normal


<Table>:
    orientation: 'vertical'
    size_hint: None, None
    size: self.minimum_size
    
    MDGridLayout:
        id: grid
        cols: 4
        size_hint: None, None
        size: self.minimum_size 
        padding: dp(0) 
        spacing: dp(10)
        
        canvas:
            Color:
                rgba: root.outer_color
            RoundedRectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: root.inner_color
            RoundedRectangle:
                pos: [self.pos[0]+dp(5), self.pos[1]+dp(5)]
                size: [self.size[0]-dp(10), self.size[1]-dp(10)]
    FloatLayout:
        id: arrow_layer
        size_hint: None, None
        size: grid.size[0], 0
    
        
